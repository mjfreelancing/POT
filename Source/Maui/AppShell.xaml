    <!--  Creates a flyout group containing Summary, Accounts, Expenses. These are also presented as Bottom Tabs  -->
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Summary"
            ContentTemplate="{DataTemplate summary:SummaryPage}"
            Route="SummaryPage">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialDesign"
                    Glyph="{x:Static fonts:IconFont.TextBoxCheckOutline}"
                    Color="{AppThemeBinding Dark={StaticResource DarkOnSurface},
                                            Light={StaticResource LightOnSurface}}" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Accounts"
            ContentTemplate="{DataTemplate accounts:AccountsPage}"
            Route="AccountsPage">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialDesign"
                    Glyph="{x:Static fonts:IconFont.Bank}"
                    Color="{AppThemeBinding Dark={StaticResource DarkOnSurface},
                                            Light={StaticResource LightOnSurface}}" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Expenses"
            ContentTemplate="{DataTemplate expenses:ExpensesPage}"
            Route="ExpensesPage">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialDesign"
                    Glyph="{x:Static fonts:IconFont.CreditCardMultipleOutline}"
                    Color="{AppThemeBinding Dark={StaticResource DarkOnSurface},
                                            Light={StaticResource LightOnSurface}}" />
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

