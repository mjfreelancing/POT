    <MenuItem Command="{Binding ShowAppInfoCommand}" Text="App Info">
        <MenuItem.IconImageSource>
            <FontImageSource
                FontFamily="MaterialDesign"
                Glyph="{x:Static fonts:IconFont.InformationOutline}"
                Color="{AppThemeBinding Dark={StaticResource DarkOnSurface},
